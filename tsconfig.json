{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist/app",
        "sourceMap": true,
        "paths": {
            "*": [
                "./node_modules/*"
            ],
            "@/*": [
                "./src/app/*"
            ]
        },
        "jsx": "react-jsx"
    },
    "include": [
        "src/app/**/*.ts"
    ]
}