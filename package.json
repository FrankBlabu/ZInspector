{
  "name": "zinspector",
  "version": "0.0.1",
  "description": "Inspection software demo prototype",
  "main": "dist/app/main.js",
  "scripts": {
    "build-server": "cd src/server && python setup.py build_py --output-dir=../../dist/server",
    "build-app": "npx tsc",
    "build-assets": "cp -r src/assets dist/app",
    "build": "npm run build-server && npm run build-app && npm run build-assets",
    "rebuild": "npm run clean && npm run build",
    "clean": "rm -rf dist",
    "start": "electron .",
    "test-server": "python -m unittest discover -s server/tests"
  },
  "author": "Frank Blankenburg",
  "license": "ISC",
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/electron-prompt": "^1.6.5",
    "@types/node": "^22.10.1",
    "electron": "^33.2.1",
    "electron-prompt": "^1.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.5",
    "@grpc/proto-loader": "^0.7.13",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  }
}